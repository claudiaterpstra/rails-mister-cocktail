<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://unsplash.it/200');">
  <div class="banner-content">

  <h1><%= @cocktail.name %></h1>

  <h3>Ingredients</h3>
  <%@cocktail.doses.each do |dose| %>
  <p>
  <ul>
    <li><%= dose.ingredient.name%>: <%= dose.description %>
      <%= link_to "Delete", dose_path(dose), method: :delete  %>
    </li>
    </ul>
    </p>
    <% end %>


  <%#= link_to "Create a new dose", new_cocktail_dose_path(@cocktail) %>
  <%#= link_to "Go back to all cocktails", cocktails_path  %>

  <h1>Add a new dose</h1>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :ingredient_id, collection: Ingredient.all %>
  <%= f.input :description %>
  <%= f.submit "Add", class: "btn btn-primary" %>
  <% end %>
  <%= link_to "Go back to all cocktails", cocktails_path  %>

  </div>
</div>
