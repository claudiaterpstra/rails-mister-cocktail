<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('cocktail.jpeg');">
  <div class="banner-content">
    <h1>Cocktail Page</h1>
    <p>Super nice cocktails!</p>
    <%= link_to "Create a new cocktail", new_cocktail_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>


<div class="row text-center">
  <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://unsplash.it/200/300');">
        <div class="card-category"><%= link_to cocktail.name, cocktail_path(cocktail) %></div>
      </div>
  </div>
   <% end %>
</div>


